[tool.mypy]
python_version = "3.10"
strict = true
warn_unused_ignores = true
warn_return_any = true
warn_unreachable = true
show_error_codes = true
ignore_missing_imports = true
disable_error_code = ["import-untyped"]
exclude = [
    "retired/*",
    "compiled-mibs-test/",
    "^compiled-mibs/",  # Exclude auto-generated MIB files
]


[tool.coverage.run]
source = ["app"]
omit = [
    "tests/*",
    "compiled-mibs/*"
]

[tool.ruff]
# Exclude auto-generated, tests, and retired/ compatibility files from ruff checks
exclude = [
    "retired/**",
    "compiled-mibs/**",
]

[tool.pytest.ini_options]
filterwarnings = [
    "ignore::DeprecationWarning",
][tool.coverage.run]
source = ["app"]
omit = [
    "tests/*",
    "compiled-mibs/*"
]
